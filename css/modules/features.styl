+medium()
  .features
    display grid
    grid-template-columns repeat(3, 1fr)

.features .item
  text-align center

  .item__image
    display flex
    align-items center
    margin 0 auto
    justify-items center
    padding spacing*1
    border-radius 50%
    width 64px
    height 64px
    background-color brand-900

  img
    width 64px

  .item__title
    margin-top spacing*0.5

  .item__text
    margin-top spacing*0.25
    line-height 1.5
    padding 0 spacing*0.5

